<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Event</legend>
     <%= f.input :name, :required => true %>
       <%= f.input :active, :as => :radio_buttons %>

		<div class="form-actions">
		  <%= f.submit 'Update Event', :class => 'btn btn-primary' %>
		  <%= link_to 'Cancel', events_path, :class => 'btn' %>
		</div>

  </fieldset>
<% end %>
