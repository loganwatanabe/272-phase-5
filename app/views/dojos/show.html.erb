<h1><%= @dojo.name %></h1>

<p>
  <b>Name:</b>
  <%= @dojo.name %>
</p>

<p>
  <b>Address:</b>
  <%= dojo_address(@dojo) %>
</p>


<p>
  <b>Active:</b>
  <%= activity(@dojo.active) %>
</p>



<br><br>
<!--Google Maps-->  

<!--fyi I had to put a method in Dojo model, and it is UNTESTED-->
<%= image_tag @dojo.create_map_link %>


<br><br>


<p><!--Functionality buttons-->
  <%= link_to 'Edit', edit_dojo_path(@dojo), :class => 'btn btn-info' %>
  <% if @dojo.active %>
    <%= link_to 'Add Student to Dojo', new_dojo_student_path(:dojo_id => @dojo.id), :class => 'btn btn-primary' %>
  <% else %>
    <a href="#" class="btn disabled">Inactive dojos cannot have students</a>
  <% end %>
  <%= link_to 'Delete dojo', dojo_path(@dojo), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</p>



<br><br>


<!--CURRENT STUDENTS LISTED-->
<div class="span4">
		<p>
		  <b>Current Students:</b>
		<table class="table table-striped">
		  <tr>
		    <th>Name</th>
		    <th>Age</th>
		    <th>Rank</th>
		  </tr>

		  <% @current_students.each do |student| %>
		    <tr>
		      <td><%= link_to student.name, student_path(student) %></td>
		      <td><%= student.age %></td>
		      <td><%= "#{rank_name(student.rank)}" %></td>
		    </tr>
		      
		  <% end %>
		</table>

		<span class="smtext">
		<!-- will_paginate @current_students, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" -->
		</span>

		</p>



		<!--This is to ensure that pages with no content don't look bad, with the footer being all the way near the top -->
		<% if @current_students.size == 0 %>
		<h5>No current students for this dojo</h5>
		<br><br><br>
		<% end %>
</div>







<!--CURRENT STUDENTS LISTED-->
<div class="span4">
		<p>
		  <b>Student Records</b>
		<table class="table table-striped">
		  <tr>
		    <th>Student</th>
		    <th>Date Started</th>
		    <th>Date Ended</th>
		  </tr>

		  <% @dojo_students.each do |ds| %>
		    <tr>
		      <td><%= link_to ds.student.name, student_path(ds.student) %></td>
		      <td><%= date_format(ds.start_date) %></td>
		      <td><%= date_format(ds.end_date) %></td>
		    </tr>
		      
		  <% end %>
		</table>

		<span class="smtext">
		<%= will_paginate @dojo_students, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
		</span>

		</p>



		<!--This is to ensure that pages with no content don't look bad, with the footer being all the way near the top -->
		<% if @dojo_students.size == 0 %>
		<h5>No students ever registered for this dojo</h5>
		<br><br><br>
		<% end %>
</div>



<div class="form-actions">
  <%= link_to 'Back to dojos', dojos_path, :class => 'btn btn' %><t>
</div>
