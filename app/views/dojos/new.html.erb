<%= simple_form_for @dojo, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Dojo</legend>
     <%= f.input :name, :required => true %>
       <%= f.input :street, :required => true %>
       <%= f.input :city, :required => true %>
       <%=f.input :state, :collection => @STATES_LIST.map{|k, v| v}, :label_method => lambda{|i| @STATES_LIST.rassoc(i).first} %>
       <%=f.input :zip%>
       <%=f.input :active%>

		<div class="form-actions">
		  <%= f.submit "Create Dojo", :class => 'btn btn-primary' %>
		  <%= link_to 'Cancel', dojos_path, :class => 'btn' %>
		</div>

  </fieldset>
<% end %>
